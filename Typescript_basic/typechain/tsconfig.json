
// tsconfig.json 파일의 존재로 vscode는 우리가 타입스크립트로 작업한다는 것을 알게 되고, 자동완성기능을 제공함.
{
    // 1. 타입스크립트에게 가장 먼저 알려줘야 하는 것은 '어디에 타입스크립트 파일이 위치하는 가' 이다.
    "include": ["src"], // include의 배열에는 우리가 자바스크립트로 컴파일하고 싶은 모든 디렉토리를 넣는다. 타입스크립트가 src의 모든 파일을 확인한다
    "compilerOptions": {
        "outDir": "build", // outDir은 자바스크립트 파일이 생성될 디렉토리를 지정한다. 'build'라는 폴더에 만들어진 코드를 넣음. 타입스크립트는 컴파일러니까 .ts 파일들을 일반적인 자바스크립트로 컴파일 시켜줌.
        "target": "es3" // target은 타입스크립트를 어떤 버전의 자바스크립트로 컴파일 할건지를 나타냄.
    }
}